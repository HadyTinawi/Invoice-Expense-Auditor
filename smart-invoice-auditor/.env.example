# Smart Invoice Auditor - Environment Variables

# OpenAI API Key (for LangChain/LangGraph)
OPENAI_API_KEY=your_openai_api_key_here

# AWS Credentials (for Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-west-2

# OCR Configuration
DEFAULT_OCR_ENGINE=tesseract  # Options: tesseract, textract

# Agent Configuration
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-3.5-turbo
USE_WORKFLOW=false  # Options: true, false
AGENT_VERBOSE=false  # Options: true, false
USE_AGENT_ANALYSIS=true  # Options: true, false

# AI Analysis Configuration
USE_AI_ANALYSIS=true  # Options: true, false
AI_ANALYSIS_MODEL=gpt-4o  # Options: gpt-4o, gpt-3.5-turbo
AI_ANALYSIS_TEMPERATURE=0.0  # Range: 0.0 to 1.0

# Memory Configuration
MEMORY_TYPE=buffer  # Options: buffer, summary
MAX_TOKEN_LIMIT=2000

# Application Settings
DEBUG=false
LOG_LEVEL=info  # Options: debug, info, warning, error, critical

# Database Settings (if needed in the future)
# DB_CONNECTION_STRING=sqlite:///data/invoices.db